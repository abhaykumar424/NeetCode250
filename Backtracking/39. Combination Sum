class Solution {
public:
    void dfs(vector<int>& candidates, vector<vector<int>>&ans,vector<int>& subset,int sum, int &target,int i){
        if(sum==target){
            ans.push_back(subset);
            return;
        }
        if(i>=candidates.size() || sum>target){
            return;
        }
        subset.push_back(candidates[i]);
        dfs(candidates, ans, subset, sum+candidates[i], target, i);
        subset.pop_back();
        dfs(candidates, ans, subset, sum, target, i+1);
    }
    vector<vector<int>> combinationSum(vector<int>& candidates, int target) {
        vector<vector<int>>ans;
        vector<int>subset;
        int i = 0;
        int sum = 0;
        dfs(candidates, ans, subset,sum, target, i);
        return ans;
    }
};